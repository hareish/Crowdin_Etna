{% extends 'base.html.twig' %}

{% block title %}Lang index{% endblock %}

{% block body %}
    <h1>Lang index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lang in langs %}
            <tr>
                <td>{{ lang.id }}</td>
                <td>{{ lang.code }}</td>
                <td>
                    <a href="{{ path('app_lang_show', {'id': lang.id}) }}">show</a>
                    <a href="{{ path('app_lang_edit', {'id': lang.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_lang_new') }}">Create new</a>
{% endblock %}
